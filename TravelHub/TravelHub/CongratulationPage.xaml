<Page x:Class="TravelHub.CongratulationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TravelHub"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="CongratulationPage">

    <Grid Background="CadetBlue">
        <Border Width="700" Margin="15" Background="LightSteelBlue" VerticalAlignment="Center" Padding="30"  CornerRadius="20" >
            <Border.Effect>
                <DropShadowEffect BlurRadius="30" ShadowDepth="0"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="Благодарим за то, что выбрали Travel Hub!" FontWeight="Bold" FontSize="20" HorizontalAlignment="Center" Foreground="DarkSlateGray"/>
                <TextBlock Text="Если у Вас возникнут вопросы - звоните на нашу горячую линию по номеру 8-800-700-84-36"  FontSize="13" Foreground="DarkSlateGray" FontWeight="DemiBold"/>
                <TextBlock Text="С уважением, travelhub.russia" FontSize="13" Foreground="DarkSlateGray" FontWeight="DemiBold"/>
                <Button Content="Вернуться на главную страницу" Background="DarkSlateGray" Foreground="White" Click="Main_Click"/>

            </StackPanel>
        </Border>
    </Grid>
</Page>
